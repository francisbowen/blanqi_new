{% if settings.notificationbar %}
{% assign topbar_height = "2rem" %}
{% assign topbar_height_2 = "1.3rem" %}
{%- assign backgroundcolor = '#feab8d' -%}
{%- assign textColor = '#ffffff' -%}
{% if settings.notification_bar_background != blank %}
  {%- assign backgroundcolor = settings.notification_bar_background -%}
{% endif %}
{% if settings.notification_bar_text_color != blank %}
  {%- assign textColor = settings.notification_bar_text_color -%}
{% endif %}

    {% assign inwam = false %}
{% if cart.attributes.accessibilitymode == "true" %}
{% assign inwam = true %}
{% endif %}

<style>
  .main_nav_wrapper.sticky_nav {
    margin-top: {{ topbar_height_2 }};
  }
  .mam-top-banner {
	overflow: hidden;
    background: {{ backgroundcolor }} ;
    color: {{ textColor }};
    font-size: 12.5px;
    display: block;
    width: 100%;
    position: relative;
    top: 0;
    left: 0;
    z-index: 100000000;
  }
  .mam-top-banner .remodal-bg{
    font-weight:500;
  } 
  .mam-top-banner a{
    color: {{ textColor }};
    font-size: 12.5px;
    font-weight: 500;
    left: 1px;
    top: 0px;
    text-decoration:underline;
  }
  
  .mam-top-banner span {
    color: #feab8d;
  }
  @media (min-width: 769px) {
    .top_bar {
      background: #252525;
    }
    #MainMenu #header {
      top: {{topbar_height}};
    }
    #MainMenu:not(.feature_image) .top_bar {
      margin-top: {{topbar_height}};
    }
    .feature_image .primary_logo {
      -webkit-filter: invert(100%);
      filter: invert(100%);
    }
    .mam-top-banner p {
      font-size: 0.7rem;
      height: {{topbar_height}};
      line-height: {{topbar_height}};
    }
    .main_nav_wrapper.sticky_nav {
      margin-top: {{topbar_height}};
    }
    body {
      margin-top: {{topbar_height}};
    }
    #header {
      top: {{topbar_height}};
    }
  }
  @media (max-width: 768px) {
    .mam-top-banner p {
      font-size: 0.7rem;
      height: {{ topbar_height_2 }};
      line-height: {{ topbar_height_2 }};
    }
    body {
      margin-top: {{ topbar_height_2 }};
    }
    #header {
      top: {{ topbar_height_2 }};
    }
  }
  @media (max-width: 375px) {
    .mam-top-banner {
      font-size: 0.6rem;
      letter-spacing: 0;
      height: {{ topbar_height_2 }};
      line-height: {{ topbar_height_2 }};
    }
  }
  .mam-top-banner p a 
  {
    color: {{ textColor }};
    font-family: Gotham A, Gotham B, sans-serif;
    font-size: 0.5rem;
    text-decoration: underline;
    margin-left: 0.2rem;
    letter-spacing: 0.05rem;
    font-weight: 500;
  }
  
  .newbar {
    font-family: Gotham A, Gotham B, Montserrat, Helvetica Neue, Helvetica, Calibri, Verdana, Arial, sans-serif !important;
    font-size: 11.5px !important;
    letter-spacing: 3px !important;
    font-weight: 400 !important;
  }
  .navpink {
       font-weight: 500 !important; 
  }
  .navcode { color:white !important;
    font-family: "FreightBigProBook-Regular",serif !important;
    font-size: 19px !important;
    letter-spacing: 0px !important;
    font-weight: lighter !important;
  }
  
    @media (max-width: 769px) {
    	.newbar {
      		font-size: 6.5px !important;
    		letter-spacing: 2px !important;
    		font-weight: normal !important;
    	}
      .navcode {    font-size: 10px !important;}
    }
  
</style>

<div class="mam-top-banner text-center" {% if settings.notification_bar_text2 != blank %}id="ticker-fade"{% endif %}>
  <a class="wamswitch" style="display: block;" href="#"><div class="wambutton">accessibility mode: <strong class="wamstatus">{% if inwam %}on{% else %}off{%endif%}</strong></div></a>
<ul>
<li style="opacity:0;">
  <div class="d-none d-sm-block remodal-bg">
    {% if settings.notification_bar_text != blank %}
    {{ settings.notification_bar_text }}
    {% endif %}
    {% if settings.notification_bar_linktext != blank %}
    {% if settings.notification_bar_link != blank %}
      <a href="{{ settings.notification_bar_link }}">
        {{ settings.notification_bar_linktext }}
      </a>
      {% else %}
      <a href="#modal">
        {{ settings.notification_bar_linktext }}
      </a>
    {% endif %}
    {% endif %}
  </div>
  <p class="d-block d-sm-none remodal-mobile" >
      {% if settings.notification_bar_linktext != blank %}
      {{ settings.notification_bar_text }}
    {% endif %}
    {% if settings.notification_bar_linktext != blank %}
    {% if settings.notification_bar_link != blank %}
      <a href="{{ settings.notification_bar_link }}">
        {{ settings.notification_bar_linktext }}
      </a>
      {% else %}
      <a href="#modal">
        {{ settings.notification_bar_linktext }}
      </a>
    {% endif %}
    {% endif %}
  </p>
  </li>
  {% if settings.notification_bar_text2 != blank %}
  <li style="opacity:0; display:none;">
  <div class="d-none d-sm-block remodal-bg">
    {% if settings.notification_bar_text2 != blank %}
    {{ settings.notification_bar_text2 }}
    {% endif %}
    {% if settings.notification_bar_linktext2 != blank %}
    {% if settings.notification_bar_link2 != blank %}
    <a href="{{ settings.notification_bar_link2 }}">
      {{ settings.notification_bar_linktext2 }}
    </a>
    {% else %}
    <a href="#modal2">
      {{ settings.notification_bar_linktext2 }}
    </a>
    {% endif %}
    {% endif %}
  </div>
  <p class="d-block d-sm-none remodal-mobile" >
      {% if settings.notification_bar_linktext2 != blank %}
      {{ settings.notification_bar_text2 }}
    {% endif %}
    {% if settings.notification_bar_linktext2 != blank %}
    {% if settings.notification_bar_link2 != blank %}
    <a href="{{ settings.notification_bar_link2 }}">
      {{ settings.notification_bar_linktext2 }}
    </a>
    {% else %}
    <a href="#modal2">
      {{ settings.notification_bar_linktext2 }}
    </a>
    {% endif %}
    {% endif %}
  </p>
  </li>
  {% endif %}
</ul>
</div>
<div class="remodal" data-remodal-id="modal">
    <button data-remodal-action="close" class="remodal-close"></button>
  {{ settings.notification_bar_popup }}
</div>
<div class="remodal" data-remodal-id="modal2">
    <button data-remodal-action="close" class="remodal-close"></button>
  {{ settings.notification_bar_popup2 }}
</div>
<script>
  //var inst = $('[data-remodal-id=newsbarpopup]').remodal();
</script>
<style>
.remodal-close:hover, .remodal-close:focus {color:#fff;}
</style>
{% endif %}