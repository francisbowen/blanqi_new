{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/blanqi.myshopify.com/products/configure/38627/edit
{% endcomment %}
{% if product.metafields.custom_fields["related_products"] != blank %}
  <div class="custom-field custom-field__related-products custom-field__type--text-list">
    <h3 class="custom-field--title">Related Products</h3>
    <div class="custom-field--value">  
      {% assign values = product.metafields.custom_fields["related_products"] | split: "|" %}
      <ul>
      {% for value in values %}
        <li>{{ value }}</li>
      {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}