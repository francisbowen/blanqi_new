{% if product.metafields.custom_fields["sale"] != blank %}
  <div class="custom-field custom-field__sale custom-field__type--checkbox">
    <h3 class="custom-field--title">Sale</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["sale"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}